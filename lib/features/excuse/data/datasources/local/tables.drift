CREATE TABLE EXCUSE (
    id INT NOT NULL PRIMARY KEY,
    excuse TEXT,
    category TEXT
);
getRandomExcuse: SELECT * FROM EXCUSE ORDER BY RANDOM() LIMIT 1;
getExcuseById: SELECT * FROM EXCUSE WHERE id = :id;
getExcuseByCategory: SELECT * FROM EXCUSE WHERE category = :category;
getAllExcuses: SELECT * FROM EXCUSE;
getRandomExcuseList: SELECT * FROM EXCUSE;